<%= form_for([:admin, @appointment_type], html: {class: 'form-horizontal'}) do |f| %>
  <% if @appointment_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@appointment_type.errors.count, "error") %> prohibited this appointment_type from being saved:</h2>

      <ul>
      <% @appointment_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group form-group-lg">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label :duration, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :duration, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label :prep_duration, class: 'col-sm-offset-1 col-sm-2 control-label' %>
    <div class="col-sm-9">
      <%= f.number_field :prep_duration, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label :post_duration, class: 'col-sm-offset-1 col-sm-2 control-label' %>
    <div class="col-sm-9">
      <%= f.number_field :post_duration, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label :overlap, 'Allow Overlap', class: 'col-sm-offset-1 col-sm-2 control-label' %>
    <div class="col-sm-9">
      <%= f.select :overlap, options_for_select({"Yes" => 1, "No" => 0}, selected: @appointment_type.overlap ? 1 : 0), {}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label :group, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :group, options_for_select({"Yes" => 1, "No" => 0}, selected: @appointment_type.group ? 1 : 0), {}, class: 'form-control', onchange: 'javascript:$("#group-time-per-person").toggleClass("hidden")' %>
    </div>
  </div>
  <div id="group-time-per-person" class="form-group form-group-lg <%= "hidden" unless @appointment_type.group %>">
    <%= f.label :group_time_per_person, class: 'col-sm-offset-1 col-sm-2 control-label' %>
    <div class="col-sm-9">
      <%= f.number_field :group_time_per_person, class: 'form-control', value: @appointment_type.group_time_per_person %>
    </div>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label :color_class, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :color_class, options_for_select(appointment_type_colors, selected: @appointment_type.color_class), {}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label :text_color, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :text_color, options_for_select(appointment_type_colors, selected: @appointment_type.text_color), {}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group form-group-lg">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
