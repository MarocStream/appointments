<div class="row">
  <div class="col-lg-8">
    <h1>Listing Recent Announcements</h1>
  </div>
  <div class+"col-lg-4">
    <%= link_to 'New Announcement', new_admin_announcement_path, class: 'btn btn-default pull-right' %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Shown to</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td>
          <% if announcement.staff? %>
            <span class="glyphicon glyphicon-eye-open"></span>
          <% end %>
          <%= announcement.name %>
        </td>
        <td><%= announcement.kind.to_s.titleize %></td>
        <td><%= time_ago_in_words(announcement.end_date) %> <%= announcement.end_date >= Time.now ? 'from now' : 'ago' %> (<%= announcement.end_date.strftime("%m/%d/%Y %I:%m %p") %>)</td>
        <td><%= link_to 'Show', announcement %></td>
        <td><%= link_to 'Edit', edit_announcement_path(announcement) %></td>
        <td><%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
