<div class="row">
  <div class="col-lg-8">
    <h1>Listing Settings</h1>
  </div>
  <div class+"col-lg-4">
    <% if current_user.admin? %>
      <%= link_to 'New Setting', new_admin_setting_path, class: 'btn btn-default pull-right' %>
    <% end %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.name %></td>
        <td><%= setting.desc %></td>
        <td><%= setting.value %></td>
        <td><%= link_to 'Show', [:admin, setting] %></td>
        <td><%= link_to 'Edit', edit_admin_setting_path(setting) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
