<%= form_for([:admin, @setting], html: {class: 'form-horizontal'}) do |f| %>
  <% if @setting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@setting.errors.count, "error") %> prohibited this setting from being saved:</h2>

      <ul>
      <% @setting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group form-group-lg">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label :desc, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :desc, class: 'form-control' %>
      <span class="help-block"><i>A detailed description of what this setting changes in the application.</i></span>
    </div>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label :value, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :value, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group form-group-lg">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
