<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group form-group-lg">
    <%= f.label :email, 'Email/Login', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email', autofocus: true %>
    </div>
  </div>

  <div class="form-group form-group-lg">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Send me password reset instructions", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<div class="indent">
  <%= render "devise/shared/links" %>
</div>
